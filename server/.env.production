# Production Environment Configuration

# Database (use RDS in production)
DATABASE_URL=postgresql://gatekeeper_user:CHANGE_ME_SECURE_PASSWORD@postgres-rds.aws.com:5432/gatekeeper_db

# Qdrant Vector Database
QDRANT_URL=http://qdrant.production.internal:6333
QDRANT_API_KEY=your-qdrant-api-key

# JWT Configuration
JWT_SECRET=CHANGE_ME_TO_A_VERY_LONG_RANDOM_STRING_AT_LEAST_32_CHARS
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=7

# API Configuration
API_TITLE=Gatekeeper Support Platform
API_VERSION=1.0.0
DEBUG=False

# CORS - Frontend URL only
CORS_ORIGINS=https://gatekeeper.example.com

# Logging
LOG_LEVEL=INFO

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@gatekeeper.com
SMTP_PASSWORD=your-app-password

# Redis (optional, for sessions/caching)
REDIS_URL=redis://redis.production.internal:6379/0